<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.groupware.mybatis.SignMapper">
	<select id="getdoc" parameterType="int" resultType="doctype">
		select * from doc_type where doc_num=#{num}
	</select>
	<select id="nowlist" resultType="signdoc">
		select * from sign_doc where sdoc_state=0
	</select>
	<select id="signlinelist" resultType="signlineVo">
		select * from(select emp.emp_num,emp.emp_name,dp.dept_num,dp.dept_name,emp.pst_num,pst.pst_name from dept dp,employee emp,position pst where dp.dept_num=emp.dept_num and emp.pst_num=pst.pst_num)
	</select>
	<select id="deptlist" resultType="signlineVo">
		select * from dept
	</select>
</mapper>


